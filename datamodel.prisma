type User {
  id: ID! @id
  avatar: String
  username: String! @unique
  email: String! @unique
  fullName: String @default(value: "")
  bio: String
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
  tikets: [Tiket!]!
  cards: [Card!]!
  likes: [Like!]!
  comments: [Comment!]!
  balance: Int! @default(value: 0)
  loginSecret: String
}

type Tiket {
  id: ID! @id
  match: String!
  information: String!
  files: File!
}

type Card {
  id: ID! @id
  playerName: String!
  information: String!
  user: User!
  files: [File!]!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like {
  id: ID! @id
  user: User!
  card: Card!
}

type Comment {
  id: ID! @id
  text: String!
  user: User!
  card: Card!
}

type File {
  id: ID! @id
  url: String!
  card: Card!
}